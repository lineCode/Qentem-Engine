{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build .bin", // executable
            "promptOnClose": false,
            "type": "shell",
            "command": "clang-8",
            "args": [
                "-g",
                "-lstdc++",
                "-Wall",
                "-std=c++11",
                "-m64",
                "-ISource",
                "Source/*.cpp",
                "Source/Addon/*.cpp",
                // "Test/TemplateTest.cpp",
                "Test/EngineTest.cpp",
                "-oBuild/QConsole.bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never",
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Check",
            "type": "shell",
            "command": "clang-tidy-8",
            "args": [
                "Source/String.cpp",
                "Source/StringStream.cpp",
                "Source/Array.hpp",
                "Source/Engine.cpp",
                "Source/Addon/Test.cpp",
                "Source/Addon/QRegex.cpp",
                "Source/Addon/Tree.cpp",
                "Source/Addon/ALU.cpp",
                "Source/Addon/Template.cpp",
                "Test/TemplateTest.cpp",
                "Test/EngineTest.cpp",
                "-checks=*,-readability-magic-numbers,-cppcoreguidelines-avoid-magic-numbers,-cppcoreguidelines-owning-memory,-modernize-use-auto,-cppcoreguidelines-pro-bounds-pointer-arithmetic,-llvm-header-guard,-hicpp*,-googl*,-fuchsia*",
                "--",
                "c++11",
                "-ISource"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build .exe", // executable
            "type": "shell",
            "command": "C:/Program Files (x86)/Microsoft Visual Studio/2017/Community/MSBuild/15.0/Bin/MSBuild.exe",
            "args": [
                "${cwd}/QConsole.sln",
                "/m",
                "/t:build",
                "/p:configuration=Release",
                "/p:Platform=x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build .so",
            "promptOnClose": false,
            "type": "shell",
            "command": "clang-8",
            "args": [
                "-lstdc++",
                "-Wall",
                "-std=c++11",
                "-m64",
                "-shared",
                "-fPIC",
                "-fmodules",
                "-ISource",
                "Source/*.cpp",
                "Source/Addon/QRegex.cpp",
                "Source/Addon/Tree.cpp",
                // "Source/Addon/ALU.cpp",
                // "Source/Addon/Template.cpp",
                "-oBuild/QLibx64.so"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
