    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build .bin", // executable
            "promptOnClose": false,
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-lstdc++",
                "-Wall",
                "-std=c++11",
                "-ISource",
                "-ISource/Extintion",
                "Test/TemplateTest.cpp",
                // "Test/EngineTest.cpp",
                "-oBuild/QConsole.bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": "$gcc"
        }
