{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build .bin", // executable
            "promptOnClose": false,
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                // "-fmodules",
                // "-S",
                // "-Wall",
                "-std=c++17",
                "-m64",
                // "-v",
                // "-Xclang",
                "-ISource",
                "Source/*.cpp",
                "Source/Addon/Test.cpp",
                "Source/Addon/QArray.cpp",
                "Source/Addon/ALU.cpp",
                "Source/Addon/Template.cpp",
                // "Test/TemplateTest.cpp",
                "Test/EngineTest.cpp",
                "-oBuild/QConsole.bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never",
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Check",
            "type": "shell",
            "command": "clang-tidy",
            "args": [
                "Source/String.cpp",
                "Source/Array.hpp",
                "Source/Engine.cpp",
                "Source/Addon/QArray.cpp",
                "Source/Addon/ALU.cpp",
                "Source/Addon/Test.cpp",
                "Source/Addon/Template.cpp",
                "Test/TemplateTest.cpp",
                "Test/EngineTest.cpp",
                "-checks=*,-cppcoreguidelines-owning-memory,-cppcoreguidelines-pro-bounds-pointer-arithmetic,-llvm-header-guard,-fuchsia*",
                "--",
                "c++17",
                "-ISource"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": "$gcc"
            // "problemMatcher": {
            //     "owner": "cpp",
            //     "fileLocation": [
            //         "absolute",
            //     ],
            //     "pattern": {
            //         "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            //         "file": 1,
            //         "line": 2,
            //         "column": 3,
            //         "severity": 4,
            //         "message": 5
            //     }
            // }
        },
        {
            "label": "Build .exe", // executable
            "type": "shell",
            "command": "C:/Program Files (x86)/Microsoft Visual Studio/2017/Community/MSBuild/15.0/Bin/MSBuild.exe",
            "args": [
                "${cwd}/QConsole.sln",
                "/m",
                "/t:build",
                "/p:configuration=Debug",
                "/p:Platform=x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent",
                "clear": true
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build .so",
            "promptOnClose": false,
            "type": "shell",
            "command": "clang++",
            "args": [
                "-shared",
                "-stdlib=libc++",
                "-Wall",
                "-std=c++17",
                "-m64",
                "-fPIC",
                // "-v",
                "-ISource",
                "Source/*.cpp",
                "-oBuild/QpieLibx64.so"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": "$gcc"
        },
        // {
