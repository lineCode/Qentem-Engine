{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Linux (LLDB)",
      "preLaunchTask": "Build .bin",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/Tests/QTest.bin"
    },
    {
      "name": "Linux (GDB)",
      "preLaunchTask": "Build .bin",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/Tests/QTest.bin",
      "args": [],
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "miDebuggerPath": "/usr/bin/gdb"
    },
    {
      "name": "Python (console)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/Example/Python/QPie.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Windows (console)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/Tests/QTest.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false
    }
  ]
}
